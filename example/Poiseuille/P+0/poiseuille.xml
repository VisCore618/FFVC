<?xml version="1.0"?>
<SphereConfig SolverType="CBC" >

<DomainInfo>
    <VoxelOrigin ox="0.0" oy="0.0" oz="0.0" />
    <VoxelSize   ix="100" jx="50" kx="3" />
    <VoxelPitch  dx="0.0" dy="0.0" dz="0.0" />
</DomainInfo>

<Steer>
    <Elem name="Version_Info">
      <Param name="CBC"		  dtype="INT"   value="138" />
      <Param name="Flow_Base" dtype="INT"   value="238" />
    </Elem>
		
    <Elem name="Algorithm">
      <Param name="Flow"   dtype="STRING" value="FS_C_EE_D_EE"/>
      <Param name="Heat"   dtype="STRING" value="C_EE_D_EE"/>
    </Elem>
		
    <Elem name="Average_option">
      <Param name="Operation"    dtype="STRING" value="Off" /> 
      <Param name="Start_Time"   dtype="REAL"   value="500.0" />
    </Elem>
		
    <Param name="Check_Parameter"        dtype="STRING" value="Off" />
    
    <Elem name="Convection_Term">
      <Param name="Scheme"      dtype="STRING" value="O3_MUSCL" />
      <Param name="Limiter"     dtype="STRING" value="minmod" />
    </Elem>
    
    <Elem name="Derived_Variable">
      <Param name="Total_Pressure"       dtype="STRING" value="off" />
      <Param name="Helicity"             dtype="STRING" value="off" />
      <Param name="Vorticity"            dtype="STRING" value="off" />
      <Param name="2nd_Invariant_of_VGT" dtype="STRING" value="off" />
    </Elem>
    
    <Param name="Example"          dtype="STRING" value="Parallel_Plate_2D" />

    <Elem name="File_IO">
        <Param dtype="STRING" name="Unit_of_File" value="Non_Dimensional"/>
        <Param dtype="STRING" name="Guide_Out" value="Without"/>
        <Param dtype="STRING" name="Output_Mode" value="Forced"/>
        <Param dtype="STRING" name="Parallel_Input" value="Master"/>
        <Param dtype="STRING" name="Parallel_Output" value="Master"/>
        <Param dtype="STRING" name="Debug_Divergence" value="Off"/>
        <Param dtype="STRING" name="Instant_Interval_Type" value="Step"/>
        <Param dtype="REAL" name="Instant_Interval" value="5000"/>
        <Param dtype="STRING" name="Averaged_Interval_Type" value="Time"/>
        <Param dtype="REAL" name="Averaged_Interval" value="200"/>
    </Elem>
    
    <Elem name="LES_option">
      <Param name="LES_calculation"  dtype="STRING" value="Off" />
    </Elem>
		
    <Elem name="Log">
        <Param dtype="STRING" name="Unit_of_Log" value="Non_Dimensional"/>
        <Param dtype="STRING" name="Log_Base" value="On"/>
        <Param dtype="STRING" name="Log_Iteration" value="Off"/>
        <Param dtype="STRING" name="Log_Profiling" value="On"/>
        <Param dtype="STRING" name="Log_Wall_Info" value="Off"/>
        <Param dtype="STRING" name="Console_Interval_Type" value="Step"/>
        <Param dtype="REAL"   name="Console_Interval" value="1"/>
        <Param dtype="STRING" name="History_Interval_Type" value="Step"/>
        <Param dtype="REAL"   name="History_Interval" value="1"/>
    </Elem>
		
    
    <Elem name="Reference_Frame">
        <Param name="Reference_Frame_Type" dtype="string" value="stationary"/>
    </Elem>
    
    <Elem name="Solver_Property">
      <Param name="Basic_Equation"       dtype="STRING" value="Incompressible"/>
      <Param name="Buoyancy"             dtype="STRING" value="No_Buoyancy" />
      <Param name="Kind_of_solver"       dtype="STRING" value="Flow_Only" />
      <Param name="PDE_type"             dtype="STRING" value="Navier_Stokes" />
      <Param name="Shape_Approximation"  dtype="STRING" value="binary" />
      <Param name="Time_Variation"       dtype="STRING" value="Unsteady" />
    </Elem>

    <Elem name="Time_Control">
        <Param dtype="STRING" name="Acceleration_Type" value="Time"/>
        <Param name="Acceleration"       dtype="REAL"   value="0.0" />
        <Param name="Dt_Type"            dtype="string" value="CFL_Reference_Velocity" />
        <Param name="Delta_t"            dtype="REAL"   value="0.2" />
        <Param name="Period_Type"        dtype="string" value="Time" />
        <Param name="Calculation_Period" dtype="REAL"   value="101" />
    </Elem>

    <Elem name="Treatment_of_wall">
      <Param name="Pressure_Gradient" dtype="string" value="grad_zero"/>
      <Param name="Velocity_Profile"  dtype="string" value="no_slip"/>
    </Elem>
    
    <Elem name="Unit">
      <Param name="Unit_of_input_parameter" dtype="STRING" value="non_Dimensional" />
      <Param name="Pressure"     dtype="STRING" value="gauge" />
      <Param name="Temperature"  dtype="STRING" value="Celsius" />
    </Elem>
    
    <StartCondition type="initial"/>

    <InputData basedir=".">
        <InFile attr="SphereVoxel" format="svx" fname="example.svx" />
        <InFile attr="Pressure"     format="SPH" fname="prs0000000100.sph" />
        <InFile attr="Velocity"     format="SPH" fname="vel0000000100.sph" />
    </InputData>

    <OutputData basedir=".">
        <History attr="log_base"       interval="1" fname="history_base.log" />
        <History attr="log_compo"      interval="1" fname="history_compo.log" />
        <History attr="log_domainflux" interval="1" fname="history_dommainflux.log" />
        <History attr="log_iteration"  interval="1" fname="history_iteration.log" />
        <History attr="log_sampling"   interval="1" fname="history_sampling.log" />
        <OutFile attr="condition"      interval="1" format="ascii" basename="condition" />
        <OutFile attr="profiling"      interval="1" format="ascii" basename="profiling" />
        <OutFile attr="Velocity"       interval="1" format="SPH"   basename="vel" />
        <OutFile attr="Pressure"       interval="1" format="SPH"   basename="prs" />
        <OutFile attr="Temperature"    interval="1" format="SPH"   basename="tmp" />
        <OutFile attr="AvrVelocity"    interval="1" format="SPH"   basename="vela" />
        <OutFile attr="AvrPressure"    interval="1" format="SPH"   basename="prsa" />
        <OutFile attr="AvrTemperature" interval="1" format="SPH"   basename="tmpa" />
        <OutFile attr="Divergence"     interval="1" format="SPH" basename="div" />
    </OutputData>

    <Elem name="Iteration">
      <Elem name="Flow">
        <Elem name="Poisson">
          <Param name="Iteration" dtype="INT"  value="50"/>
          <Param name="Epsilon"   dtype="REAL" value="1.0e-3"/>
          <Param name="Omega"     dtype="REAL" value="1.2"/>
          <Param name="Norm"      dtype="STRING" value="v_div_max"/>
          <Param name="Linear_Solver"     dtype="STRING" value="SOR2sma" />
        </Elem>
      </Elem>
      
      <Elem name="Heat">
        <Elem name="1st_Iteration">
          <Param name="Iteration" dtype="INT"  value="30"/>
          <Param name="Epsilon"   dtype="REAL" value="1.0e-2"/>
          <Param name="Omega"     dtype="REAL" value="1.2"/>
          <Param name="Linear_Solver"     dtype="STRING" value="SOR" />
        </Elem>
      </Elem>
    </Elem>
		
    <Elem name="Model_Setting">
        <Param name="fluid" id="1"    dtype="INT" value="800" comment="air"/>
        <Param name="solid" id="600"  dtype="INT" value="600" comment="wall"/>
    </Elem>
    
    <Elem name="Monitor_List">
        <Param dtype="STRING" name="Log" value="On"/>
        <Param dtype="STRING" name="Output_File" value="sample.log"/>
        <Param dtype="STRING" name="Output_Mode" value="Gather"/>
        <Param dtype="STRING" name="Unit" value="Non_Dimensional"/>
        <Param dtype="STRING" name="Sampling_Interval_Type" value="Time"/>
        <Param dtype="REAL" name="Sampling_Interval" value="10"/>
    
      <Elem name="line" comment="x=0">
        <Param name="variable"         dtype="string"   value="velocity" />
        <Param name="sampling_method"  dtype="string"   value="interpolation" />
        <Param name="sampling_mode"    dtype="string"   value="fluid" />
        <Param name="division"         dtype="int"      value="25" />
        <Elem name="from">
          <Param name="x"   dtype="REAL"   value="0.0" />
          <Param name="y"   dtype="REAL"   value="0.0" />
          <Param name="z"   dtype="REAL"   value="0.0" />
        </Elem>
        <Elem name="to">
          <Param name="x"   dtype="REAL"   value="0.0" />
          <Param name="y"   dtype="REAL"   value="1.0" />
          <Param name="z"   dtype="REAL"   value="0.0" />
        </Elem>
      </Elem>
    </Elem>
    
</Steer>


<Parameter>
    <Elem name="Reference">
        <Param name="Length"    dtype="REAL" value="1.0" />
        <Param name="Velocity"  dtype="REAL" value="1.0" />
        <Param name="Gravity"   dtype="REAL" value="9.8" />
        <Param name="Base_Pressure"   dtype="REAL" value="0.0" />
			
        <Param name="Reynolds" dtype="REAL" value="100.0" />
        <Param name="Prandtl"  dtype="REAL" value="0.71" />
			
        <Param name="Ref_ID" dtype="INT" value="1" />
    </Elem>
    <Elem name="Temperature">
        <Param name="Base"       dtype="REAL" value="20.0" />
        <Param name="Difference" dtype="REAL" value="35.0" />
    </Elem>
    <Elem name="Initial_State">
        <Param name="Density"     dtype="REAL" value="1.0" />
        <Param name="Pressure"    dtype="REAL" value="0.0" />
        <Param name="Temperature" dtype="REAL" value="20.0" />
        <Elem name="Velocity">
            <Param name="u" dtype="REAL" value="0.0"/>
            <Param name="v" dtype="REAL" value="0.0"/>
            <Param name="w" dtype="REAL" value="0.0"/>
        </Elem>
    </Elem>
</Parameter>


<Medium_Table>
    <Elem name="Fluid" id="1" comment="Water">
      <Param name="density" dtype="REAL" value="998.2" />
      <Param name="specific_heat" dtype="REAL" value="4182" />
      <Param name="thermal_conductivity" dtype="REAL" value="598e-3" />
      <Param name="kinematic_viscosity" dtype="REAL" value="1.004e-6" />
      <Param name="viscosity" dtype="REAL" value="1002.6e-06" />
      <Param name="sound_of_speed" dtype="REAL" value="1500.0" />
      <Param name="volume_expansion" dtype="REAL" value="0.04e-3" />
    </Elem>
    <Elem name="Fluid" id="800" comment="Air">
      <Param name="density" dtype="REAL" value="1.1763" />
      <Param name="specific_heat" dtype="REAL" value="1007" />
      <Param name="thermal_conductivity" dtype="REAL" value="2.614e-02" />
      <Param name="kinematic_viscosity" dtype="REAL" value="1.0e-02" />
      <Param name="viscosity" dtype="REAL" value="1.1763e-02" />
      <Param name="sound_of_speed" dtype="REAL" value="340.0" />
      <Param name="volume_expansion" dtype="REAL" value="0.04e-3" />
    </Elem>
    <Elem name="Solid" id="600" comment="Fe">
      <Param name="density" dtype="REAL" value="7870.0" />
      <Param name="specific_heat" dtype="REAL" value="442.0" />
      <Param name="thermal_conductivity" dtype="REAL" value="80.3" />
    </Elem>
    <Elem name="solid" id="500" comment="Al">
      <Param name="density" dtype="REAL" value="2688.0" />
      <Param name="specific_heat" dtype="REAL" value="905.0" />
      <Param name="thermal_conductivity" dtype="REAL" value="237.0" />
    </Elem>
</Medium_Table>

<BC_Table>
  	<InnerBoundary>
    </InnerBoundary>
    
    <OuterBoundary>
      <Elem name="Basic_BCs">
        <Elem name="Wall" id="1">
            <Param dtype="REAL" name="Normal_X" value="0.0"/>
            <Param dtype="REAL" name="Normal_Y" value="0.0"/>
            <Param dtype="REAL" name="Normal_Z" value="0.0"/>
            <Param dtype="STRING" name="Specified_Type" value="Velocity"/>
            <Param dtype="STRING" name="Profile" value="Constant"/>
            <Param dtype="REAL" name="Specified_Value" value="0.0"/>
        </Elem>
        <Elem name="Wall" id="2">
            <Param dtype="REAL" name="Normal_X" value="1.0"/>
            <Param dtype="REAL" name="Normal_Y" value="0.0"/>
            <Param dtype="REAL" name="Normal_Z" value="0.0"/>
            <Param dtype="STRING" name="Specified_Type" value="Velocity"/>
            <Param dtype="STRING" name="Profile" value="Constant"/>
            <Param dtype="REAL" name="Specified_Value" value="1.0"/>
        </Elem>
        <Elem name="outflow" id="4">
          <Param name="velocity_type" dtype="STRING" value="average" />
        </Elem>
        <Elem name="periodic" id="7" >
          <Param name="mode" dtype="string" value="simple_copy" />
        </Elem>
        <Elem name="periodic" id="8" >
          <Param name="mode" dtype="string" value="Directional" />
          <Param name="pressure_difference" dtype="REAL" value="0.0" />
          <Param name="flow_direction" dtype="string" value="upstream" />
        </Elem>
        <Elem name="periodic" id="9" >
          <Param name="mode" dtype="string" value="Directional" />
          <Param name="pressure_difference" dtype="REAL" value="0.0" />
          <Param name="flow_direction" dtype="string" value="downstream" />
        </Elem>
      </Elem>
	
      <Elem name="Face_BC">
        <Elem name="X_MINUS" id="8" comment="periodic_upstream">
          <Param name="Guide_Cell_ID" id="1" />
        </Elem>
        <Elem name="X_PLUS"  id="9" comment="periodic_downstream">
          <Param name="Guide_Cell_ID" id="1" />
        </Elem>
        <Elem name="Y_MINUS" id="1" comment="wall">
          <Param name="Guide_Cell_ID" id="600" />
        </Elem>
        <Elem name="Y_PLUS"  id="1" comment="wall">
          <Param name="Guide_Cell_ID" id="600" />
        </Elem>
        <Elem name="Z_MINUS" id="7" comment="periodic">
          <Param name="Guide_Cell_ID" id="1" />
        </Elem>
        <Elem name="Z_PLUS"  id="7" comment="periodic">
          <Param name="Guide_Cell_ID" id="1" />
        </Elem>
      </Elem>
    </OuterBoundary>
    
  </BC_Table>
  
</SphereConfig>
