AR          = ar cru
RANLIB      = ranlib
RM          = \rm -f
MPI_DIR	    = /opt/openmpi
TP_DIR      = /usr/local/TextParser
OMP_FLAGS   = -openmp
CC          = icc
CFLAGS      = -O3 -I$(TP_DIR)/include
CXX         = icpc
CXXFLAGS    = -O3 $(OMP_FLAGS) -I$(TP_DIR)/include -I../include
