FCFLAGS     = -O3 -I$(TP_DIR)/include -I../include
F90         = ifort
F90FLAGS    = -O3 $(OMP_FLAGS) -I$(TP_DIR)/include -I../include
LDFLAGS     = -L/opt/intel/composerxe/lib
LIBS        = -lifport -lifcore

