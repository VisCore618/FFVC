CFLAGS      = -O3
CXX         = icpc
CXXFLAGS    = -O3 $(OMP_FLAGS)
FC          = ifort
FCFLAGS     = -O3
F90         = ifort
F90FLAGS    = -O3 -Warn unused -fpp $(OMP_FLAGS)
LDFLAGS     = -L/opt/intel/composerxe/lib
#LDFLAGS     = -L/opt/intel/composerxe/lib -lmpi_cxx // Linux
LIBS        = -lifport -lifcore
UDEF_LIB_PATH_SPEC =
UDEF_LIBS_SPEC     =

