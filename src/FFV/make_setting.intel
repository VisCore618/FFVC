AR          = ar cru
RANLIB      = ranlib
RM          = \rm -f
MPI_DIR	    = /opt/openmpi
CPM_DIR     = /usr/local/CPMlib
TP_DIR      = /usr/local/TextParser
POLYLIB_DIR = ../Polylib-2.4
CUTLIB_DIR  = ../Cutlib-2.0.5
PMLIB_DIR   = ../PMlib-1.7
CIOLIB_DIR  = ../CIOlib-1.0
OMP_FLAGS   = -openmp -par-report=3 -vec-report=2
UDEF_OPT    =
